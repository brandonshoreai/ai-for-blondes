---
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="AI for Blondes â€” Complex AI news made understandable. A free daily newsletter that translates the technical stuff into plain language." />
    <meta name="theme-color" content="#0A0A0A" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Instrument+Sans:wght@400;500;600&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />
    <title>{title}</title>
    <meta property="og:title" content="AI for Blondes" />
    <meta property="og:description" content="Complex AI news, made understandable. Free daily newsletter." />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
  </head>
  <body class="bg-bg text-cream font-sans antialiased overflow-x-hidden">
    <slot />
  </body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  ::selection {
    background: #E84393;
    color: #F5F0E8;
  }

  ::-webkit-scrollbar {
    width: 5px;
  }
  ::-webkit-scrollbar-track {
    background: #0A0A0A;
  }
  ::-webkit-scrollbar-thumb {
    background: #A09888;
    border-radius: 3px;
  }

  html {
    scrollbar-color: #A09888 #0A0A0A;
    scrollbar-width: thin;
    scroll-behavior: smooth;
  }
</style>
